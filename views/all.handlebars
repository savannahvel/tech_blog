<main class="container">
    <h2>Tech News</h2>
    {{#each posts as |post| }}

    <div class="card">
        <div class="card-header">
            <div class="card-title">
                <a href="/posts/{{id}}">{{title}}</a>
            </div>
        </div>
        <div class="card-body">
            {{blog_text}}
        </div>
    </div>
    {{/each}}
</main>